<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:strokeColor="@color/red_orange"
    app:strokeWidth="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_weapon">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_default_weapon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintDimensionRatio="16:5.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/displayicon" />

        <TextView
            android:id="@+id/txt_weapon_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="@id/img_default_weapon"
            app:layout_constraintEnd_toEndOf="@id/img_default_weapon"
            app:layout_constraintTop_toTopOf="@id/img_default_weapon"
            app:layout_constraintBottom_toTopOf="@id/img_default_weapon"
            android:gravity="center"
            android:fontFamily="@font/valorant_font"
            android:textColor="@color/red_orange"
            android:textSize="26sp"
            tools:text="Vandal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>